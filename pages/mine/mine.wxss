/* mine.wxss */
.container{
	background-color:#fff;
}
.bg-box{
	width: 100%;
	height: 342rpx;
	position: relative;
}
.bgpic{
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}
.personalmsg{
	position: relative;
	z-index: 5;
	text-align: center;
	padding-top: 30rpx;
}
.personalmsg image{
	width: 140rpx;
	height: 140rpx;
	border-radius: 50%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
	border-radius: 50%;
}

.userinfo-nickname {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
	border-radius: 50%;
	color: #fff;
	white-space: nowrap;
}

.nickname{
	color: #fff;
}
.mylsit{
	padding: 90rpx 53rpx 0 53rpx;
}
.itembox{
	overflow: hidden;
	height: 96rpx;
	line-height: 96rpx;
	position:relative;
}
.itembox button{
  position:absolute;
  left:0;
  top:0;
  width:100% !important;
	height:100%;
	opacity: 0;
  z-index:1;
  padding:0;
  margin:0;
}

.border{
	border-top: 1rpx solid #e2e2e2;
	border-bottom: 1rpx solid #e2e2e2;
}
.item-cont{
	float: left;
}
.item-cont image{
	width: 32rpx;
	height:32rpx;
}
.item-cont text{
	padding-left: 30rpx;
	position: relative;
	top: -5rpx;
}
.item-arrow{
	float: right;
}
.item-arrow image{
	width: 24rpx;
	height: 24rpx;
	
}

.modalImage{
	width: 250rpx;
  height: 250rpx;
  margin: 10rpx 20rpx 0rpx 0rpx;
  float: left;
}